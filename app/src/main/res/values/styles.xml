<resources>

    <!-- Base application theme. -->
    <style name="GilvusTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--menu dots color-->
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <!--toolbar text color-->
        <item name="titleTextColor">@color/dark_grey</item>
        <!--toolbar icon color-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/dark_grey</item>
    </style>

    <style name="GilvusTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GilvusTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>

    <style name="GilvusTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" >
    </style>

    <style name="GilvusTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

</resources>
